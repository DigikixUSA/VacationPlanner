<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:background="@color/accent"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/vacationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hawaii Trip"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vacationNumExc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Excursions:"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/vacationNumExcCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/vacationDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 10 â€“ June 18"
            android:textColor="@color/text_primary"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
