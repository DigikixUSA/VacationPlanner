<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UI.ExcDetails">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image2"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toolbar -->
    <!--com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:title="Edit Excursion"
        android:titleTextColor="@color/text_primary"
        app:navigationIconTint="@color/text_primary"
        app:titleCentered="true" /-->



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@drawable/background_image2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/vacTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/vacTitleDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/excName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:hint="Excursion Name"
                android:textColor="@color/text_primary"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:background="#20000000"
                android:gravity="start"
                android:clickable="true"
                android:focusable="true"/>

            <!--EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excursion Name"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Material3.TextInputLayout.FilledBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/excName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter name"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout-->

            <!-- Excursion Date -->
            <!--TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Date:"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/excDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="02/20/2022"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/text_secondary"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="24dp"/-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excursion Date"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <!-- Excursion Date TextView -->
            <TextView
                android:id="@+id/excDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Tap to select date"
                android:textColor="@color/text_primary"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:background="#20000000"
                android:gravity="start"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
